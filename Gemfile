# ====================================
# Gemfile for ItedBlog (Noctua Jekyll Theme v3.1)
# ====================================

source "https://rubygems.org"

# Jekyll 核心
gem "jekyll", "~> 4.4.1"

# 常用插件
gem "jekyll-feed", "~> 0.17"       # RSS feed
gem "jekyll-sitemap", "~> 1.6"     # Sitemap
gem "jekyll-seo-tag", "~> 2.8"     # SEO

# Markdown 解析
gem "kramdown", "~> 2.5"

# 高亮
gem "rouge", "~> 4.1"

# 兼容 Windows / Linux 构建
gem "webrick", "~> 1.8", ">= 1.8.1"

# 可选：MathJax 支持（如果需要在构建时生成 MathJax）
# gem "jekyll-mathjax", "~> 0.5"

# 如果你在 CI/CD 上用 Bundler 构建：
# 安装依赖：
#   bundle install
# 构建网站：
#   bundle exec jekyll build
